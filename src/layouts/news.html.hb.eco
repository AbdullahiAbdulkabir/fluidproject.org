<html>
    <head>
        <!-- Styles -->
        <%- @getBlock('styles').add(@site.styles).toHTML() %>
        
        <!-- Scripts -->
        <%- @getBlock('scripts').add(@site.scripts).toHTML() %>
    </head>

    <body>
        <div class="fluid-web fluid-web-news">
            <div class="flc-toc-tocContainer"> </div>
            
            <div class="row fluid-web-header">
                <div class="medium-6 columns">
                    <header>
                        <h1><span class="fluid-web-logo-star"></span>fluid</h1>
                    </header>
                </div>
                <div class="medium-6 columns">            
                    <nav class="fluid-web-nav">
                        <ul class="right button-group">
                            <li> <a href="index.html" class="button current">Home</a></li>
                            <li> <a href="about.html" class="button">About</a></li>
                            <li> <a href="projects.html" class="button">Projects</a></li>
                            <li> <a href="" class="button">Docs</a></li>
                        </ul>
                    </nav>
                </div>
            </div>

            <section class="row">
                <div class="medium-6 columns">
                    <h2 class="fluid-web-emphasized-text"><%=@document.title%></h2>
                    <p class="fluid-web-news-post-meta">
                       Posted by <%=@document.author%> on <%= @moment(@document.date).format('MMMM Do, YYYY') %>
                    </p>
                </div>
                <div class="medium-6 columns">
                    {{{content}}}
                </div>
           </section>
           
           <section class="row">
               <div class="fluid-web-news-other">
                    <% for page in @getCollection("html").findAll({relativeOutDirPath:"news"},[{postdate: -1}]).toJSON(): %>
                        <li>
                            <a href="<%= page.url %>">
                                <%= page.title %>
                            </a> - <%= @moment(page.postdate).format('MMMM Do, YYYY') %>
                        </li>
                    <% end %>
               </div>
           </section>
            
            <footer class="row fluid-web-footer">
                <div class="medium-6 columns">
                    <p>Fluid is a project of the <a href="http://idrc.ocadu.ca/">Inclusive Design Research Centre</a> at <a href="http://www.ocadu.ca">OCAD 
University</a>, funded by a grant from <a href="http://www.mellon.org/">The Andrew W. Mellon Foundation</a>.</p>
                    
                    <p><a href="https://www.google.com/maps/place/205+Richmond+St+W/@43.6493603,-79.3901121,17z/">205 Richmond St. W. 2nd Floor</a><br/>
                    Toronto, ON Canada M5V 1V3 <br/>
                    T. 416-977-6000 #3968 <br/>
                    F. 416-977-9844
                    </p>
                </div>
                
                <div class="medium-6 columns">
                    <span id="fluid-web-announcement-text-field-label" class="fluid-web-announcement-text-field-label">Subscribe to announcements</span>
                    
                    
                    <div class="row">
                        <div class="large-12 columns">
                            <div class="row collapse">
                                <div class="small-10 columns">
                                    <input class="fluid-web-announcement-text-field" type="text" placeholder="enter email address" aria-labelledby="fluid-web-announcement-text-field-label"/>
                                </div>
                                <div class="small-2 columns">
                                    <a href="#" class="button postfix fluid-web-announcement-text-field-submit">Go</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <dl class="fluid-web-projectCoordinator-list">
                        <dt><a href="mailto:jtreviranus@faculty.ocadu.ca">Jutta Treviranus</a></dt>
                        <dd>Principal Investigator, Director and Professor</dd>
                        <dt><a href="mailto:jmitchell@ocadu.ca">Jess Mitchell</a></dt>
                        <dd>Senior Manager, Research and Development</dd>
                        <dt><a href="mailto:cclark@ocadu.ca">Colin Clark</a></dt>
                        <dd>Lead Software Architect</dd>
                    </dl>
                </div>
            </footer>
        </div>
    </body>
</html>